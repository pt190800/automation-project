{
  "name": "automation-project",
  "version": "1.0.0",
  "description": "Web automation for e-commerce with Playwright",
  "scripts": {
    "dev:backend": "tsx watch src/backend/server.ts",
    "dev:frontend": "cd src/frontend && vite",
    "build:backend": "tsc -p tsconfig.backend.json",
    "build:frontend": "cd src/frontend && vite build",
    "test:unit": "jest",
    "test:e2e": "playwright test",
    "test": "npm run test:unit && npm run test:e2e"
  },
  "dependencies": {
    "@types/react-router-dom": "^5.3.3",
    "@types/uuid": "^10.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "playwright": "^1.40.0",
    "react-router-dom": "^7.13.0",
    "uuid": "^13.0.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "jest": "^29.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8"
  }
}
